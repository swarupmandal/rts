<?page title="new page title" contentType="text/html;charset=UTF-8"?>
<zk>
  <window title="USER ROLE" apply="org.zkoss.bind.BindComposer" viewModel="@id('vm') @init('org.appsquad.viewmodel.RolemasterViewModel')">
    <style>
			.z-textbox{
			   	text-transform:uppercase;
			   }
	</style>
   <div>
       <tabbox>
            <tabs>
                <tab label="Role Master" style="font-weight:bold"/>
                <tab label="Assign Role" style="font-weight:bold" onClick="@command('onClickAssignRole')"/>
            </tabs>
            <tabpanels>
                  <tabpanel>
                       <div>
                          <grid >
                              <columns>
                                    <column></column>
                                    <column></column>
                                    <column></column>
                              </columns>
                              <rows>
                                  <row>
                                     <label value="Role" style="font-weight:bold"/>
                                     <textbox value="@bind(vm.roleMasterBean.roll)"/>
                                     <button label="Save" onClick="@command('onClickRoleSave')"/>
                                  </row>
                              </rows>
                          </grid>
                       </div>
                       <space></space>
                       <div>
                           <grid model="@bind(vm.rolebeanlist)" mold="paging" pageSize="11" sclass="fgrid">
                               <columns>
                                    <column label="Role" align="center"/>
                                    <column label="Update" align="center"/>
                                    <column label="Save" align="center"/>
                                    <column label="Delete" align="center"/>
                               </columns>
                               <rows>
                                   <template name="model" var="v">
                                   <row>
                                       <textbox value="@bind(v.roll)" readonly="@bind(v.visibilityRoleTextBox)" width="200px"/>
                                       <button label="Edit" onClick="@command('onclickedit', bean = v)" disabled="@bind(v.visibilityEditButton)"/>
                                       <button label="Save" onClick="@command('onClickSave', bean = v)" disabled="@bind(v.visibilitySaveButton)"/>
                                       <button label="Delete" onClick="@command('onClickDelete', bean = v)" disabled="@bind(v.visibilityDeleteButton)"/>
                                   </row>
                                   
                                   </template>
                                   
                               </rows>
                           </grid>
                       </div>
                  </tabpanel>
                  
                  <tabpanel>
                  
                        <div>
                          <hlayout>
                            <grid>
                                <columns>
                                      <column></column>
                                      <column></column>
                                     
                                </columns>
                                
                                <rows>
                                
								   <row>
					  					<label value="User Name" style="font-weight:bold"></label>		
					  					<combobox model="@bind(vm.userList)"  selectedItem="@bind(vm.roleMasterBean.userprofileBean)" readonly="true"
		             						value="@bind(vm.roleMasterBean.userprofileBean.username)" width="120px" onSelect="@command('onSelectUserName')">
		             					<template name="model" var="q">
		             					<comboitem value="@bind(q.username)" label="@bind(q.username)"/>
		             					</template>
		             					</combobox>	
								  
					  					<label value="Role Name" style="font-weight:bold"></label>		
					  					<combobox model="@bind(vm.roleList)" selectedItem="@bind(vm.roleMasterBean.downBean)" readonly="true"
		             						value="@bind(vm.roleMasterBean.downBean.roll)" width="120px" onSelect="@command('onSelectRollName')">
		             					<template name="model" var="p">
		             					<comboitem value="@bind(p.roll)" label="@bind(p.roll)"/>
		             					</template>
		             					</combobox>	
								   </row>
								   
								   <row>
								    
								          <button label="Save" onClick="@command('onClickAssign')"></button>
								   
								   </row>
								   
								 </rows>
                            </grid>
                            </hlayout>
                        </div>
                        <space></space>
                        <div>
                           <grid model="@bind(vm.mappingList)" mold="paging" pageSize="10" sclass="fgrid">
                               <columns>
                                    <column label="User-Name" align="center"/>
                                    <column label="Role-Name" align="center"/>
                                    <column label="Update" align="center"/>
                               </columns>
                               <rows>
                                   <template name="model" var="v">
                                   <row>
                                       <textbox value="@bind(v.userprofileBean.username)" readonly="true"></textbox>
                                       <textbox value="@bind(v.downBean.roll)" readonly="true" width="220px"></textbox>
                                       <button label="Update" onClick="@command('onClickUpdate', bean = v)"/>
                                   </row>
                                   </template>
                               </rows>
                           </grid>
                       </div>
                  </tabpanel>
            </tabpanels>
       </tabbox>
   </div>
   </window>
</zk>